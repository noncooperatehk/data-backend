{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "http://noncooperatehk.com/frontmatter.schema.json",
  "title": "Front Matter",
  "description": "",
  "type": "object",
  "properties": {
    "name": {
      "description": "",
      "type": "string"
    },
    "inputId": {
      "description": "",
      "type": "string",
      "pattern": "^[0-9a-f]{8}-[0-9a-f]{4}-[0-9a-f]{4}-[0-9a-f]{4}-[0-9a-f]{12}$"
    },
    "previewImageUrl": {
      "description": "",
      "anyOf": [
        { "type": "string", "format": "uri" },
        { "type": "null" }
      ]
    },
    "referenceArticleId": {
      "type": "string",
      "pattern": "^[0-9a-f]{8}-[0-9a-f]{4}-[0-9a-f]{4}-[0-9a-f]{4}-[0-9a-f]{12}$"
    },
    "referenceInformation": {
      "anyOf": [
        { "type": "string" },
        { "type": "null" }
      ]
    },
    "status": {
      "description": "",
      "type": "string",
      "enum": [
        "已查證"
      ]
    },
    "tags": {
      "description": "",
      "type": "array",
      "items": {
        "type": "string",
        "enum": [
          "餐飲",
          "商品",
          "自助餐/放題",
          "中式",
          "港式",
          "台式",
          "日式",
          "韓式",
          "東南亞",
          "西餐",
          "甜品",
          "麵食",
          "火鍋",
          "燒烤",
          "快餐",
          "飲品"
        ]
      },
      "minItems": 1,
      "uniqueItems": true
    },
    "addresses": {
      "description": "",
      "type": "array",
      "items": {
        "$ref": "https://noncooperatehk.com/geographical-location.schema.json"
      },
      "minItems": 1,
      "uniqueItems": true
    }
  },
  "required": [
    "name",
    "inputId",
    "previewImageUrl",
    "referenceArticleId",
    "referenceInformation",
    "status",
    "tags",
    "addresses"
  ]
}